// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model User {
  id         String   @id @unique
  email      String
  name       String
  money      Decimal
  income     Income[]
  spent      Spent[]
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Income {
  id     String @id @unique
  user   User   @relation(fields: [userId], references: [id])
  userId String
  value Decimal
}

model Spent {
  id     String @id @unique
  user   User   @relation(fields: [userId], references: [id])
  userId String
  value Decimal
}
